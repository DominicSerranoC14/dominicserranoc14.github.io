@tailwind preflight;
@tailwind components;
@tailwind utilities;

/*
    Button Components
*/
.btn {
    @apply font-bold py-2 px-4 rounded;
}

.btn-outline {
    @apply font-semibold py-2 px-4 rounded border;

    &:hover {
        @apply border-transparent;
    }
}

.btn-orange {
    @apply bg-orange text-white;

    &:hover {
        @apply bg-orange-dark;
    }
}

.btn-orange-outline {
    @apply border-orange text-orange-dark;

    &:hover {
        @apply bg-orange text-white;
    }
}