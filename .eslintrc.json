{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },

    "globals": {},

    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
    ],

    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },

    "rules": {
        "indent": [
            "error",
            "tab",
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],

        "vue/html-indent": ["error", 4],

        "vue/singleline-html-element-content-newline": [
            "error",
            {
                "ignoreWhenNoAttributes": true,
                "ignoreWhenEmpty": true,
                "ignores": [
                    "pre",
                    "textarea",
                    "a"
                ]
            }
        ]
    }
}